@model MovieToon.Models.RentalModel

@{
    ViewData["Title"] = "Create new rental";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-white border-bottom">
        <li class="breadcrumb-item" aria-current="page">Rentals</li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalMovies" class="control-label"></label>
                <select asp-for="Movies" class="form-control" asp-items="ViewBag.Movies" multiple="multiple"></select>
            </div>
            <div class="form-group float-right">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
