@model MovieToon.Models.MovieModel

@{
    ViewData["Title"] = "Details movie";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-white border-bottom">
        <li class="breadcrumb-item" aria-current="page">Movies</li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

<div class="card mx-auto" style="width: 18rem;">
    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap">
        <rect width="100%" height="100%" fill="#868e96"></rect>
    </svg>
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
        <div class="card-text">
            @Html.DisplayFor(model => model.Description)
            <br />
            <sub class="float-right">$ @Html.DisplayFor(model => model.Price)</sub>
            <br />
            <sub class="float-left">Clasification: @Html.DisplayFor(model => model.MovieClasification.Name)</sub>
            <sub class="float-right">@Html.DisplayFor(model => model.MovieCategory.Name)</sub>
        </div>
        <br />
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</div>
